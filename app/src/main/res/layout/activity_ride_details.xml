<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".main.search.RideDetailsActivity">



            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/splitter4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_details" />

            <ImageView
                android:id="@+id/iv_luggage_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/splitter3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_luggage" />

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/splitter2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_car" />

            <ImageView
                android:id="@+id/iv_green_vertical_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="63dp"
                android:layout_toEndOf="@+id/tv_hour_begin"
                android:layout_toRightOf="@+id/tv_hour_begin"
                android:rotation="90"
                android:scaleX="2.5"
                app:srcCompat="@android:drawable/button_onoff_indicator_on" />

            <ImageView
                android:id="@+id/iv_steeringWheel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/splitter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_star_big_on" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/splitter"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_available_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="16dp"
                android:textColor="@color/colorText"/>



            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hour_end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textSize="16dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_car_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_car"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:text=""
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splitter"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/iv_steeringWheel"
                android:layout_toLeftOf="@+id/iv_steeringWheel"

                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hour_begin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_alignBaseline="@id/tv_hour_end"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iv_green_vertical_line"
                android:layout_toRightOf="@+id/iv_green_vertical_line"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splitter2"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:text=""
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_hour_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_luggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splitter3"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/iv_luggage_icon"
                android:layout_toRightOf="@+id/iv_luggage_icon"
                android:text=""
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="315dp"
                android:layout_height="47dp"
                android:layout_below="@+id/splitter4"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/iv_luggage_icon"
                android:layout_toRightOf="@+id/iv_luggage_icon"
                android:text=""
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_alignBaseline="@id/tv_hour_begin"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iv_green_vertical_line"
                android:layout_toRightOf="@+id/iv_green_vertical_line"

                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="30dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splitter"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:text=""
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_rating_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rating"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/iv_steeringWheel"
                android:layout_toLeftOf="@+id/iv_steeringWheel"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="16dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tv_see_on_the_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_hour_end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"

                android:text=""
                android:textSize="16dp"
                android:textColor="@color/colorText"/>

            <View
                android:id="@+id/splitter"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@id/tv_distance"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="#808080" />

            <View
                android:id="@+id/splitter2"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@id/iv_avatar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#808080" />

            <View
                android:id="@+id/splitter3"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/iv_car"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#808080" />

            <View
                android:id="@+id/splitter4"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/iv_luggage_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#808080" />

            <Button
                android:id="@+id/btn_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/iv_message"
                android:background="@drawable/button_rounded_edges"
                android:padding="10dp"
                android:text="Rezerwuj"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/ib_see_on_the_map"
                android:layout_width="37dp"
                android:layout_height="45dp"
                android:layout_below="@id/tv_hour_end"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/tv_see_on_the_map"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/marker" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>