<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.search.RideDetailsActivity">


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:text="Sr. 06 Marca" />

    <TextView
        android:id="@+id/tv_hour_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="15:00" />

    <TextView
        android:id="@+id/tv_hour_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hour_begin"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="18:00" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@id/tv_hour_begin"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"

        android:textSize="20dp"
        android:text="Bydgoszcz" />

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@id/tv_hour_end"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Poznan"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/tv_date"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/tv_hour_begin"
        android:layout_toRightOf="@+id/tv_hour_begin"
        android:rotation="90"
        android:scaleX="2.5"
        app:srcCompat="@android:drawable/button_onoff_indicator_on" />
</RelativeLayout>